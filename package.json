      "license": "assets/agreement.html",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "LeeHansHinLun",
        "repo": "ElectronApplication1",
        "vPrefixedTagName": true,
        "private": true,
        "releaseType": "draft"
